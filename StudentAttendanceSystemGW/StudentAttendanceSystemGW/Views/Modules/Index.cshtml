@model IEnumerable<StudentAttendanceSystemGW.Models.Module>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { controller = "Modules" }, new { @class = "btn btn-info" })

</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ModuleDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModuleCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreditHour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ModuleDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModuleCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreditHour)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ModuleId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ModuleId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ModuleId })
        </td>
    </tr>
}

</table>
