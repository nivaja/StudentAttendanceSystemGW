@model StudentAttendanceSystemGW.ViewModels.AdmitStudentViewModel



@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "EnrollmentReport", FormMethod.Get))
{

 
    <!-- h    hhhhhhh-->

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <label>Module</label>
                    @Html.DropDownList("ModuleId", null, htmlAttributes: new { @class = "form-control rounded-0" })

                </div>
                

                <div class="col-6">
                    <button type="submit" value="Search" class="btn btn-outline-info btn-sm" style="margin-top:25px;">Search</button>
                </div>

            </div>

        </div>
    </div>


    <!-- asdasdasd-->


}

<table class="table table-hover" style="margin-top:1.5rem;">
    <tr>
        <th>Student Name</th>
        <th>Enrollment Date</th>
    </tr>
    @foreach (var x in Model.Students)
    {
        <tr>
            <td>@x.StudentName</td>
            <td>@x.AdmittedDate</td>
        </tr>
    }

</table>