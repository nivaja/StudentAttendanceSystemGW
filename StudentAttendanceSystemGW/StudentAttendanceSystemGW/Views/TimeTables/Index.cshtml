@model IEnumerable<StudentAttendanceSystemGW.Models.TimeTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { controller = "TimeTables" }, new { @class = "btn btn-info" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Class.ClassDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Module.ModuleDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Class.ClassDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Module.ModuleDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Day)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TimeTableId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TimeTableId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TimeTableId })
        </td>
    </tr>
}

</table>
